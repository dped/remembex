<div class="create_full_text_form">
  <%= simple_form_for @full_text do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :content %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Edit text", class: "create_text_button" %>
    </div>
  <% end %>
</div>
