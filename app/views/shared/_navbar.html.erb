<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if (action_name == "show" && controller_name == "text_paragraphs") %>
    <%= link_to full_text_text_paragraphs_path(@text_paragraph.full_text), class:"btn_navbar_back" do %>
    <%= image_tag "arrow-white.png" %>
    <% end  %>
  <% elsif (action_name == "show" && controller_name == "game_sessions") %>
    <%= link_to full_text_text_paragraphs_path(@game_session.text_paragraph.full_text), class:"btn_navbar_back" do %>
    <%= image_tag "arrow-white.png" %>
    <% end  %>
    <% else (action_name == "show" && controller_name == "game_two_sessions") %>
    <%= link_to text_paragraph_path(@game_two_session.text_paragraph), class:"btn_navbar_back" do %>
    <%= image_tag "arrow-white.png" %>
    <% end  %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, height: 120, width: 120, crop: :fill, gravity: :face %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
