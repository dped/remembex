

<div class="game_session_background_container">
  <div class="game_session_main_container">
    <div class="game_session_game_container">
      <div class="game_session_header_container">
        <h1>Insert word game</h1>
        <h3><%= @game_session.text_paragraph.full_text.title %></h3>
      </div>
      <%= form_tag(update_game_session_path, method: :post, id: "insert_word_game_form", data: { game_session_id: @game_session.id }) do %>
        <p>
          <% count = 1 %>
          <% @chopped_paragraph.each do |section| %>
            <% if section.is_a? Hash %>
                <%= text_field_tag "word#{count}", nil, class: "insert_word_input text-center", placeholder: "______", style: "width: #{section[:secret_word].length * 28}px",data: { answer: section[:secret_word] } %>
              <% count += 1 %>
            <% else %>
              <%= section %>
            <% end %>
          <% end %>
        </p>
      <% end %>
    </div>
    <%= link_to create_game_session_path(@game_session.text_paragraph), class:"btn_retry_game" do %>
      <i class="fas fa-undo-alt"></i>
    <% end %>
  </div>
  <button id="sweet-alert-demo" data-right-inputs="<%= @game_session.number_of_right_inputs %>" data-number-of-inputs="<%= @game_session.number_of_inputs %>" data-text-paragraph-id="<%= @game_session.text_paragraph.id %>" class="btn btn-primary">Click me!</button>
</div>
      <%= javascript_pack_tag 'insert_word_game' %>
      <%= javascript_pack_tag 'finished_game_popup' %>

