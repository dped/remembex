<script src="https://code.responsivevoice.org/responsivevoice.js?key=JXrgWNPm"></script>

<div class="text_paragraph_show_main_container">
  <div class="text_paragraph_show_container">
    <h1 class="text_paragraph_show_title"><%= @text_paragraph.full_text.title %></h1>
    <p class="text_paragraph_show_text"><%= @text_paragraph.content %></p>


  <button onclick="responsiveVoice.speak('<%= @text_paragraph.content %>');"
    type="button" value="Play">Play</button>

    <button onclick="responsiveVoice.pause('<%= @text_paragraph.content %>');"
    type="button" value="Play">Pause</button>

    <button onclick="responsiveVoice.resume('<%= @text_paragraph.content %>');"
    type="button" value="Play">Resume</button>

    <a href="#" id="voice-btn" class="btn btn-primary">Click me bitch</a>


    <%= javascript_pack_tag "read_aloud" %>
  </div>
</div>
