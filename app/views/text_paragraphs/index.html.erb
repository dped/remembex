<div class="text-paragraphs-index-background">
  <div class="section">
    <div class="first-row-content">
      <div class="first-row-content-top">
        <div class="first-row-content-back-button">
          <%= link_to full_texts_path do %>
          <%= image_tag "left-arrow-blue.png", class: "back-button", alt:"back" %>
            <!-- <i class="fas fa-chevron-left"></i> -->
          <% end  %>
        </div>
        <div class="header-text"><h1>Select Text Card!</h1>
        </div>
        <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
      </div>
      <p class="lead text-center mt-1 text-primary" style="color: #5151CC; font-size: 24px;"><%= @full_text.title %></p>
    </div>
  </div>

  <div class="container pb-5">
    <div class="row">
      <div class="col-12">
        <h3 class="text-center mt-5 text-primary">List of all your text paragraphs</h3>
        <% @text_paragraphs.each do |paragraph| %>
          <div class="text-card-solid-border">
            <p class="text-content"><%= paragraph.content %></p>
            <p class="card-number-integer text-primary"><%= paragraph.order_number %></p>
            <div class="done-or-not-icon">
              <%= link_to mark_as_done_path(paragraph), remote: true, method: :patch, class: "white-link", id: "mark-as-done-#{paragraph.id}" do %>
                <%= render 'mark_as_done_button', paragraph: paragraph %>
              <% end %>
              <div class="background-icon-wrapper">
                <div class="white-icon-bg"></div>
              </div>

            </div>

            <div class="div-wraper d-flex">
              <div class="d-flex align-items-center justify-content-center game-options">
                <div><strong>Play </strong></div>
                <div><%= link_to "Game One", create_game_session_path(paragraph), method: :post, class: "to-game-one-button" %>
                </div>
              </div>
              <div class="d-flex align-items-center justify-content-center read-listen-options">
                <div><strong>Listen to </strong></div>
                <div><%= link_to "Paragraph", text_paragraph_path(paragraph), class: "to-listen-to-button" %>
                </div>
              </div>
            </div>





          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



